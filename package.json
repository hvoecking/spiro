{
  "name": "spiro",
  "version": "0.0.1",
  "dependencies": {
    "alpinejs": "^3.13.0",
    "buffer": "^6.0.3",
    "normalize.css": "^8.0.1",
    "vite-plugin-watch-and-run": "^1.1.3"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^5.0.6",
    "@types/alpinejs": "^3.7.2",
    "@types/chai": "^4.3.7",
    "@types/jest": "^29.5.5",
    "@types/tailwindcss": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "autoprefixer": "^10.4.15",
    "bip39": "^3.1.0",
    "cypress": "^13.2.0",
    "cypress-real-events": "^1.10.3",
    "cypress-vite": "^1.4.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "scripts": {
    "build:as:debug": "asc assembly/index.ts --target debug",
    "build:as:release": "asc assembly/index.ts --target release",
    "build:as": "npm run build:as:debug && npm run build:as:release",
    "build": "npm run build:as && ./scripts/icons.sh && tsc && vite build",
    "commit": "cz",
    "dev:_cypress:component": "NODE_ENV=test cypress open --component -b chrome",
    "dev:_cypress:e2e": "NODE_ENV=test cypress open --e2e -b chrome",
    "dev:cypress:component": "npm-run-all -p dev:vite:test dev:_cypress:component",
    "dev:cypress:e2e": "npm-run-all -p dev:vite:test dev:_cypress:e2e",
    "dev:vite:test": "npm run build:as && NODE_ENV=test vite --mode test",
    "dev:vite": "npm run build:as && vite",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "preview": "vite preview",
    "test:_cypress": "NODE_ENV=test cypress run",
    "test:cypress": "npm-run-all -p test:vite test:_cypress:run",
    "test:jest": "jest",
    "test:vite": "NODE_ENV=test vite --mode test",
    "test": "jest",
    "x": "cypress open -h"
  },
  "private": true,
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "pre-commit": "npm run lint"
    }
  },
  "type": "module",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
